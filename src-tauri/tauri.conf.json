{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TARS",
  "version": "0.1.0",
  "identifier": "com.tars.assistant",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "tars",
        "width": 800,
        "height": 700,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "fullscreen": false,
        "resizable": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {},
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    }
  }
}
